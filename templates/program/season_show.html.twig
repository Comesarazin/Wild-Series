{% extends 'base.html.twig' %}

{% block title %}Saison {{ season.number }} de {{ program.title }}{% endblock %}

{% block body %}
    <h1>Saison {{ season.number }} de {{ program.title }}</h1>
    <p>Catégorie : {{ program.category.name }}</p>
    <p>Pays : {{ program.country }}</p>
    <p>Année de sortie : {{ program.year }}</p>
    
    <h2>Épisodes de la saison :</h2>
    <ul>
        {% for episode in season.episodes %}
            <li>Épisode {{ episode.number}} : {{ episode.title }} 
            <p> {{ episode.synopsis }} </p> 
            <a href="{{ path('program_episode_show', {'program_id': program.id, 'season_id': season.id, 'episode_id': episode.id}) }}">Lien vers la episode</a>
            </li>
        {% endfor %}
    </ul>

    <a href="{{ path('program_show', {'id': program.id }) }}">Retour à la liste des saison</a>
{% endblock %}
