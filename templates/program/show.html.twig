{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <p>Pays : {{ program.country }}</p>
            <p>Année de sortie : {{ program.year }}</p>
            <strong>Acteurs :</strong>
            <ul>
                {% for actor in program.actors %}
                    <li>{{ actor.name }}</li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
            <p>Saison :</p>
            <ul>
                {% for season in program.seasons %}
                    <li>Saison {{ season.number }} - {{ season.description }}</li>
                    <a href="{{ path('program_season_show', {'program_id': program.id, 'slug': program.slug, 'season_id': season.id}) }}">Lien vers la saison</a>


                {% endfor %}
            </ul>
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}